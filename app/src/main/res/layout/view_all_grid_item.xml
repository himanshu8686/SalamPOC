<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_background_rounded"
    android:layout_margin="4dp"
    android:padding="5dp"
    android:elevation="3dp"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/oneplus"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/tv_product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="One plus"
        android:textSize="14sp"
        android:lines="2"
        android:paddingVertical="2dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@color/wet_blue"
        />
    <TextView
        android:id="@+id/tv_product_spec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SD 865 Processor"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="#00C853"
        />
    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rs. 30,000"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        />
</LinearLayout>